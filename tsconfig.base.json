{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "removeComments": true,
    "esModuleInterop": true,
    "jsx": "react",
    "strict": true,
    "isolatedModules": true,
    "lib": ["ESNEXT", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },

  "exclude": ["node_modules", "dist"]
}
